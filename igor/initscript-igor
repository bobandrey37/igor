### BEGIN INIT INFO
# Provides:          igor
# Required-Start:    bleServer networking
# Required-Stop:     bleServer networking
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Igor home automation service
### END INIT INFO

# Using the lsb functions to perform the operations.
. /lib/lsb/init-functions
# Process name ( For display )
NAME=igor
# Daemon name, where is the actual executable
DAEMON="/home/jack/src/dis-git/igor/igor/igor"
IGOR_DIR="/home/jack/src/dis-git/igor/databases/igorDatabase.jack"
DAEMON_ARGS="-d $IGOR_DIR"

LOGFILE="$IGOR_DIR/igor.log"
SCRIPT="python $DAEMON $DAEMON_ARGS"
RUNAS=jack
PIDFILE=/var/run/igor.pid

# If the daemon is not there, then exit.
test -d $DAEMON || exit 5

start() {
  if [ -f /var/run/$PIDNAME ] && kill -0 $(cat /var/run/$PIDNAME); then
    echo 'Service already running' >&2
    return 1
  fi
  echo 'Starting serviceâ€¦' >&2
  local CMD="$SCRIPT &> \"$LOGFILE\" & echo \$!"
  su -c "$CMD" $RUNAS > "$PIDFILE"
  echo 'Service started' >&2
}

stop() {
  if [ ! -f "$PIDFILE" ] || ! kill -0 $(cat "$PIDFILE"); then
    echo 'Service not running' >&2
    return 1
  fi
  echo 'Stopping serviceâ€¦' >&2
  kill -15 $(cat "$PIDFILE") && rm -f "$PIDFILE"
  echo 'Service stopped' >&2
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  retart)
    stop
    start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
esac
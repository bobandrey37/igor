<?xml version="1.0" ?>
<data>
	<actions>
		<action>
			<xpath>/data/devices/tv/power</xpath>
			<url>/pluginscripts/philips/power?power={.}</url>
		</action>
		<action>
			<xpath>/data/devices/tv/*[name()!='power']</xpath>
			<url>/pluginscripts/philips/push?{name()}={.}</url>
		</action>
		<action>
			<interval>60</interval>
			<url>/pluginscripts/philips/pull</url>
			<aggregate>true</aggregate>
		</action>			
		<action>
			<xpath>/data/devices/tv</xpath>
			<method>PUT</method>
            <url>/data/environment/introspection/lastActivity/tv</url>
            <mimetype>text/plain</mimetype>
            <data>{igor_dateTime()}</data>
		</action>
	</actions>
</data>

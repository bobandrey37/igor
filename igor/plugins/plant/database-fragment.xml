<?xml version="1.0" ?>
<data>
	<devices>
		<plant/>
	</devices>
	<actions>
		<action>
			<xpath>/data/devices/plant/pos</xpath>
			<url>{/data/plugindata/plant/protocol}://{/data/plugindata/plant/host}/stepper/0?pos={.}</url>
			<representing>devices/plant</representing>
		</action>
		<action>
			<xpath>/data/environment/energy/electricity</xpath>
			<url>/data/devices/plant/pos</url>
			<method>PUT</method>
			<mimetype>text/plain</mimetype>
			<data>{700-(number(.)*700 div 5)}</data>
			<minInterval>60</minInterval>
			<condition>not(/data/environment/night)</condition>
		</action>
		<action>
			<interval>600</interval>
			<url>/pluginscripts/plant/pull</url>
			<representing>devices/plant</representing>
			<aggregate>true</aggregate>
		</action>			
	</actions>
	<plugindata>
		<plant>
			<host>plant.local</host>
			<protocol>https</protocol>
		</plant>
	</plugindata>
	<environment>
		<energy/>
	</environment>
</data>

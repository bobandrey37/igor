#!/bin/bash
dir=`dirname $0`
dirHomeServer=$dir/../../..
dirFitbit=$dirHomeServer/../../fitbit
case "x$igor_user" in
x)
	echo $0: need user= argument
	exit 1
	;;
esac
case "x$igor_pluginData" in
x)
	echo $0: no pluginData for user=$igor_user
	exit 1
	;;
esac
echo $igor_pluginData | python $dirFitbit/getFitbit.py --stdin | python $dirHomeServer/homeVar.py --put application/json sensors/fitbit/$igor_user

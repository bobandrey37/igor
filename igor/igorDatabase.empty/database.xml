<?xml version="1.0" ?>
<data>
	<environment>
		<night/>
		<location/>
		<energy/>
		<weather/>
		<messages/>
		<devices/>
		<systemHealth>
			<messages/>
		</systemHealth>
		<introspection>
			<lastActivity/>
			<rebootCount/>
		</introspection>
	</environment>
	<sensors/>
	<devices>
		<igor/>
	</devices>
	<people/>
	<identities/>
	<actions>
		<action>
			<name>save</name>
			<interval>3600</interval>
			<minInterval>60</minInterval>
			<url>/internal/save</url>
			<xpath>/data/plugindata//* | /data/actions/* | /data/triggers/* | /data/identities//* | /data/sandbox/*</xpath>
		</action>
		<action>
			<name>update</name>
			<xpath>/data/actions/*</xpath>
			<url>/internal/updateActions</url>
		</action>
        <action>
            <name>cleanup</name>
            <method>DELETE</method>
            <url>/data/environment/messages/message[position()&lt;last()]</url>
        </action>
	    <action>
	        <name>start</name>
	        <url>/internal/started</url>
	    </action>
		<action>
			<name>reboot</name>
            <xpath>/data/devices/igor/startTime</xpath>
            <url>/data/environment/introspection/lastActivity/reboot</url>
            <method>PUT</method>
            <mimetype>text/plain</mimetype>
            <data>{igor_dateTime(.)}</data>
		</action>
		<action>
			<name>reboot</name>
            <xpath>/data/devices/igor/startTime</xpath>
            <url>/data/environment/introspection/rebootCount</url>
            <method>PUT</method>
            <mimetype>text/plain</mimetype>
            <data>{number(/data/environment/introspection/rebootCount)+1}</data>
		</action>
		<action>
			<name>checkNight</name>
			<interval>900</interval>
			<method>PUT</method>
			<url>/data/environment/night</url>
			<mimetype>text/plain</mimetype>
			<data>{igor_hours_from_dateTime(igor_dateTime()) < 8 or igor_hours_from_dateTime(igor_dateTime()) >= 23}</data>
			<notBefore>1492177210</notBefore>
		</action>
	</actions>
	<sandbox/>
	<environment>
		<introspection>
			<lastActivity/>
			<rebootCount>0</rebootCount>
		</introspection>
	</environment>
	<eventsources/>
	<plugindata/>
</data>

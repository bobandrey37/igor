        <action own:plugin="{plugin}">
            <xpath>/data/environment/lights/*</xpath>
            <url>/scripts/pluginscript/{plugin}/switch?state={.}&switch={/data/plugindata/{plugin}/switch[name=name($originalContext)]/id}</url>
			<representing>devices/{plugin}</representing>
        </action>
    </actions>
    <plugindata>
        <{plugin}>
            <host>malakoff.local</host>
            <switch>
                <id>0</id>
                <name>sampleSwitch</name>
            </switch>
        </{plugin}>
    </plugindata>
</data>

<?xml version="1.0" ?>
<data xmlns:own="http://jackjansen.nl/igor/owner">
	<devices>
		<tv own:plugin="{plugin}"/>
	</devices>
	<plugindata>
		<{plugin} own:plugin="{plugin}">
			<action>
				<xpath>/data/devices/tv/power</xpath>
				<url>/pluginscript/philips/power?power={.}</url>
				<representing>devices/tv</representing>
			</action>
			<action>
				<xpath>/data/devices/tv/*[name()!='power']</xpath>
				<url>/pluginscript/philips/push?{name()}={.}</url>
				<representing>devices/tv</representing>
			</action>
			<action>
				<interval>60</interval>
				<url>/pluginscript/philips/pull</url>
				<aggregate>true</aggregate>
			</action>
		</{plugin}>
	</plugindata>
</data>

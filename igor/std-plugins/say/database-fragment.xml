<?xml version="1.0" ?>
<data xmlns:own="http://jackjansen.nl/igor/owner">
	<actions>
		<action own:plugin="{plugin}">
			<xpath>/data/environment/messages/*</xpath>
			<condition>not(data/environment/night)</condition>
			<url>/pluginscript/{plugin}/message?args={.}</url>
		</action>
	</actions>
	<plugindata>
		<{plugin} own:plugin="{plugin}">
		</{plugin}>
	</plugindata>
</data>
